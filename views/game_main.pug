doctype html
html
head
  style
      include ../public/styles/main.css

body
  p 
    .name#name0 #{player1}: 
      span.score#score0 0
    div seria: 
      span#current0 0
  p 
    .name#name1 #{player2}: 
      span.score#score1 0
    div seria: 
      span#current1 0
    br
    br
    div Wypadlo: 
      span#dice_current 0
  .buttons
    button#roll_dice Rzucaj
    button#hold Starczy
    div#one_point Jedynka!
  p Gramy do 
    span#total_points #{total_score}
  #winnerFrame
    #winner x
    br
    button#newGame Jeszcze jeszcze
  br
  br
  #db_export
    form(action="/game", method="POST")
      input#score0_export.score_input(name="score0_export")
      input#score1_export.score_input(name="score1_export")
      button#add_score(type="submit") Dodaj wynik
script
  include ../public/javascripts/game_run.js
